<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context="com.example.cherena.modernchris.MainActivity"
    android:orientation="vertical"
    android:background="@color/background_floating_material_light">

    <LinearLayout
        android:id="@+id/rowTop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:layout_margin="12dp">

        <LinearLayout
            android:id="@+id/topLeft"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dd3131"
            android:layout_margin="2dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topRight"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#03f537"
            android:layout_margin="2dp">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowUpperMid"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="2"
        android:layout_margin="12dp">

        <LinearLayout
            android:id="@+id/upperMidLeft"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#740cfc"
            android:layout_margin="2dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/upperMidCentre"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="2dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/upperMidRight"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f9cc02"
            android:layout_margin="2dp"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lowerMidRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_margin="12dp">

        <LinearLayout
            android:id="@+id/lowerMidLeft"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0313fa"
            android:layout_margin="2dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/lowerMidRight"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#f9cc02"
            android:layout_margin="2dp"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#0313fa"
        android:layout_margin="12dp"></LinearLayout>

    <SeekBar
        android:id="@+id/colourSlide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:max="30"/>
</LinearLayout>
